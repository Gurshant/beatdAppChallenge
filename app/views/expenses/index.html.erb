<p id="notice"><%= notice %></p>
<div class="container">
<div class="row justify-content-center">
  <div class=" col">

    <center><h1>Expenses</h1><center/>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Cost</th>
          <th>Quantity</th>
          <th>Total</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
          <td><%= expense.name %></td>
          <td><%= Category.find_by(id: expense.category_id).name %></td>
            <td><%= expense.cost %></td>
            <td><%= expense.quantity %></td>
            <td><%= expense.quantity*expense.cost %></td>
            <td><%= link_to 'Show', expense %></td>
            <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
            <td><%= link_to 'Delete', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <%= link_to 'New Expense', new_expense_path, :class=>'btn btn-primary' %>

</div>

