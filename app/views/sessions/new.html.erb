<div class="container">

  <center><h1>Sign In</h1></center>

  <%= form_with url: session_path, local: true do |f|%>
    
    <div class="form-group">
      <label for="email">Email</label>
      <input class="form-control" type="email" name="email" placeholder="hello@example.com" id="email">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input class="form-control" type="password"  name="password" placeholder="********" id="password">
    </div>
    <button class="btn btn-primary" type="submit" name="action"> Sign In </button>

  <% end %>
</div>


